{% if product.metafields.custom.specifications.value.size > 0 %}
    <table class="table table-bordered specificationTable">
        {% for row in product.metafields.custom.specifications.value %}
            <tr class="{% cycle 'odd', 'even' %}">
                {% if row.size == 1 %}
                    {% for col in row %}
                        <th>{{ col | last }}</th>
                    {% endfor %}
                {% else %}
                    {% for col in row %}
                        <td>{{ col | last }}</td>
                    {% endfor %}
                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endif %}